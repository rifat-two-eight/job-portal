{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next\\dev/types/**/*.ts",
    ".next\\dev/types/**/*.ts",
    "**/*.mts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "src/app/(guest)/layout.jsx",
    "src/app/(jobSeeker)/layout.jsx",
    "src/app/(auth)/layout.jsx",
    "src/app/(recruiter)/layout.jsx",
    "src/app/(allUser)/chat/page.jsx",
    "src/app/(recruiter)/recruitment-dashboard/page.jsx",
    "src/app/(recruiter)/recruitment-dashboard/recent-applicants.jsx",
    "src/app/(recruiter)/recruitment-dashboard/metrics-card.jsx",
    "src/app/(recruiter)/edit-job-post/page.jsx",
    "src/app/(recruiter)/seeker-resume/page.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}